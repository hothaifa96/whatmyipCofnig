pipeline{
    agent any
    environment{
        APP_NAME='whatsmyip'
        GITHUB_URL='https://github.com/hothaifa96/whatmyip'
    }
    stages{
        stage('checkout source code'){
            steps{
                git branch: 'main', credentialsId: 'hodi-git', url: '${env.GITHUB_URL}'
            }
        }
        stage('build docker image'){
            steps{
                dir('backend'){
                    sh 'docker build -t ${env.APP_NAME}:V1.${env.BUILD_NUMBER}'
                }
                sh 'docker images | grep -i ${env.APP_NAME}'
            }
        }
        
    }
}